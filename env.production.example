# Production Environment Variables Template
# Copy this to .env in your backend directory

# Database - Replace with your MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/jpapp?retryWrites=true&w=majority

# JWT Secret - Use a strong, random secret key
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# Email Configuration (for admin notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Server Configuration
PORT=5001
NODE_ENV=production

# CORS - Add your frontend domain when you deploy the app
CORS_ORIGIN=https://your-app-domain.com
